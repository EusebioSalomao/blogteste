{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
        {{teste}}
<div class="card">
    <div class="card-body">
<h3>Editar Postagem:</h3>
        <form action="/adm/postagens/nova" method="post">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" value="{{postagem.titulo}}"  class="form-control">
            
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id=""  class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id=""  class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" id=""   class="form-control" value="{{postagem.conteudo}}"></textarea>
            
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
        </form>
    </div>
</div>