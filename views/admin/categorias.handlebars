<h2>Lista de Categorias:</h2>
<hr>
<a href="/adm/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
  
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{data}}</small><br>
            <a href="/adm/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>
            <form action="/adm/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-4">Eliminar categoria</button>

            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}