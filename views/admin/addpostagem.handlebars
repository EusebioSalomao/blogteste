{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
<h3>Nova Postagem:</h3>
        <form action="/adm/postagens/nova" method="post">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" id="" placeholder="Digite o título da postagem" class="form-control">
            
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="" placeholder="Digite Slug" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="" placeholder="Descreve a postagrm" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" id=""  placeholder="Escreve o conteúdo aqui" class="form-control"></textarea>
            
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Salvar postagem</button>
        </form>
    </div>
</div>